        {% for recipe in list %}
            <tr class="element">
                <td class="image"> <img src="{{ asset(recipe.foto) }}" alt=""/></td>
                <td class="description">
                    <p class="title">{{ recipe.name }}</p>
                    <p>Apra≈°ymas</p>
                    <p>{{ recipe.description }}</p>
                    <p>Reitingas: {{ recipe.rank }}</p>

                    <a class="button" href="{{ path('cocktails_recipe_single', {'id': recipe.id }) }}"><button>Pasirinkti</button></a>
                </td>
            </tr>
        {% endfor %}

    </table>

{% endblock %}
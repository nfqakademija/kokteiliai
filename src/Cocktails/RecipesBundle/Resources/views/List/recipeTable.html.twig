<link href="{{ asset('css/table.css') }}" rel="stylesheet" type="text/css" />
{% block table %}
    <table class="main_table" border="1px solid black">

        {% for recipe in list %}

            <tr >
                <td> <img src="{{ asset(recipe.foto) }}" alt="" height="100" width="100"/></td>
                <td>
                    <p>{{ recipe.name }}</p>
                    <p>--Aprasymas--</p>
                    <p>Reitingas: {{ recipe.rank }}</p>
                    <button type="button">Pasirinkti</button>
                </td>

            </tr>
        {% endfor %}
    </table>
{% endblock table %}